<UserControl x:Class="LearnHub.App.Views.VideosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <StackPanel Margin="16">
        <TextBlock Text="Discover videos" FontSize="20" FontWeight="SemiBold" />
        <WrapPanel Margin="0,8,0,0" VerticalAlignment="Center">
            <TextBox Text="{Binding Query, UpdateSourceTrigger=PropertyChanged}" Width="280" />
            <Button Content="Search" Command="{Binding SearchCommand}" Margin="8,0,0,0" Width="120" />
            <ComboBox ItemsSource="{Binding DurationFilters}" SelectedItem="{Binding DurationFilter}" Margin="8,0,0,0" Width="120" />
        </WrapPanel>

        <ListView ItemsSource="{Binding Results}" Margin="0,12,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Title" DisplayMemberBinding="{Binding Title}" Width="240" />
                    <GridViewColumn Header="Channel" DisplayMemberBinding="{Binding Channel}" Width="160" />
                    <GridViewColumn Header="Duration" DisplayMemberBinding="{Binding Duration}" Width="120" />
                    <GridViewColumn Header="Published" DisplayMemberBinding="{Binding PublishedDate}" Width="150" />
                </GridView>
            </ListView.View>
        </ListView>
    </StackPanel>
</UserControl>
