<UserControl x:Class="LearnHub.App.Views.SearchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <StackPanel Margin="16">
        <TextBlock Text="What do you want to learn?" FontSize="20" FontWeight="SemiBold" />
        <TextBox Text="{Binding Query, UpdateSourceTrigger=PropertyChanged}" Margin="0,8,0,0" />
        <CheckBox IsChecked="{Binding PreferReputableDomains}" Content="Prefer reputable domains" Margin="0,8,0,0" />
        <Button Content="Search" Command="{Binding SearchCommand}" Margin="0,8,0,0" Width="120" />

        <ListView ItemsSource="{Binding Results}" Margin="0,12,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Title" DisplayMemberBinding="{Binding Title}" Width="240" />
                    <GridViewColumn Header="Domain" DisplayMemberBinding="{Binding Domain}" Width="140" />
                    <GridViewColumn Header="Snippet" DisplayMemberBinding="{Binding Snippet}" Width="340" />
                </GridView>
            </ListView.View>
        </ListView>
    </StackPanel>
</UserControl>
